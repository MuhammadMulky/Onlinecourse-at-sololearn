import java.util.Formatter;


public class WritingaFile {
	public static void main(String[] args) {
   try {
	   Formatter f = new 
Formatter("D:\\Sololearn\\test.txt");
	f.format("%s %s %s", "1","John", "smith \r\n");
	f.format("%s %s %s", "2","Amy", "Brown");
	f.close();
   } catch (Exception e) {
	   System.out.println("Error");
   }
   }
}
   
